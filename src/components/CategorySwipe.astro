---
const categories = [
  { name: "Latest", selected: true },
  { name: "Web", selected: false },
  { name: "Tech", selected: false },
  { name: "Related", selected: false },
  { name: "Philosophy", selected: false },
];
---

<div class="m-4 flex flex-row gap-3 text-white overflow-x-auto items-center">
  {
    categories.map((item) => (
      <div
        className={`rounded-full px-4 text-sm ${item.selected ? "bg-[#111B31] text-white font-semibold" : "bg-[#EFEFEF] text-[#A5A5A5]"}`}
      >
        {item.name}
      </div>
    ))
  }
</div>
